<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/title" android:layout_width="fill_parent"
	android:layout_height="26dip" android:layout_gravity="right|center">
	<ImageView android:id="@+id/logo" android:src="@drawable/logo"
		android:paddingLeft="0px" android:layout_width="100dip"
		android:layout_height="wrap_content" android:layout_gravity="center_vertical" />
	<TextView android:id="@+id/title_text" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingLeft="0px"
		android:text="@string/header_name" android:typeface="sans"
		android:textStyle="bold" android:gravity="center" android:textSize="20px"
		android:textColor="#ffffff" />

</LinearLayout>
